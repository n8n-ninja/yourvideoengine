{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2023",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "lib": ["DOM", "ES2023"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noErrorTruncation": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["remotion.config.ts"]
}
